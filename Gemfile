  gem 'jekyll-avatar'
  # gem 'jekyll-gist'
  # gem 'jekyll-github-metadata'
  gem 'jekyll-include-cache'
  gem 'jekyll-mentions'
  gem 'jekyll-paginate'
  gem 'jekyll-readme-index'
  gem 'jekyll-relative-links'
  gem 'jekyll-seo-tag'
  gem 'jekyll-swiss'
  gem 'jekyll-titles-from-headings'
  gem 'jekyll-watch'
end

gem 'jemoji'
